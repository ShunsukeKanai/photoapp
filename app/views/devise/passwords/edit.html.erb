<% provide(:title, "パスワードの再設定") %>
<div class="col-md-6 offset-md-3 mt-3">
  <h2 class="font-weight-bold text-center">パスワードの再設定</h2>
  <div class="mt-5">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field border-bottom">
        <%= f.label :password, "新しいパスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control border-0" %>
      </div>

      <div class="field border-bottom mt-2">
        <%= f.label :password_confirmation, "新しいパスワード再入力" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control border-0" %>
      </div>

      <div class="actions mt-3 text-center">
        <%= f.submit "パスワードを変更する", class: "btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>


